{
  "compilerOptions": {
    //To force skipping node_modules exlude wonÂ´t do it
    "lib": [
      "ES2021",
      "ES2021.String"
    ],
    "target": "ES2021",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
